<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: 'form-control' %><br>

      <%= f.label :introduction, "自己紹介" %>
      <%= f.text_field :introduction, class: 'form-control' %><br>

      <%= f.label :image, "アイコン画像"%>
      <%= f.file_field :image, class: 'form-control' %><br>

      <%= f.submit "更新", class: "btn btn-primary" %>
    <% end %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li class="small text-danger"><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>