<div class="mt-5">
  
    <div class="mt-4">
      <div class="">
        <div class="h3">【開催予定】</div>
      </div>
      <% if @host_rooms_future.empty? %>
      <div class="">
        <div class="card p-3 mt-3">
          <div class="row">
            <div class="col-9">
              <div class="study-title">              
                開催予定はありません<br>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%else%>
      <% @host_rooms_future.each do |room| %>
        <div class="">
          <div class="card p-3 mt-3">
            <div class="row">
              <div class="col-9">
                <div class="study-title"> 
                    <div class="card-title">
                      <%= link_to room.room_name, "#" %><br>
                    </div>
                    <div class="card-text">
                      <%= room.room_detail %><br>
                    </div>
                </div>
            </div>
            <div class="col-3 text-center pl-0">
              <div class="row">
                <div class="col-12 col-lg-6">
                  <div class="date-day-month m-auto">
                    <div class="date-day">
                      <div class="date">
                        <%= room.room_start_datetime.strftime("%-d").to_s %>
                      </div>
                      <div class="day">
                        <%= room.room_start_datetime.strftime("%a") %>
                      </div>
                    </div>
                    <div class="month">
                      <%= room.room_start_datetime.strftime("%-m月").to_s %>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-lg-6">
                  <div class="mt-2 text-center">
                    <%= room.room_start_datetime.strftime("%-H:%M 〜").to_s %>
                    <%= room.room_end_datetime.strftime("%-H:%M").to_s %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <hr>
          <div class="d-flex justify-content-between">
            <div class="small mb-0">
              開催者：<%= link_to room.user.user_name, room.user %><br>
            </div>
            <div class="small mb-0"><i class="fas fa-user-friends"></i>
                    :<%= room.room_capacity %>名<br>
            </div>
          </div>
        </div>
      </div>
